@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            var defaultlotName = $('#selectLotName').val();
            var defaultSlotNumber = $("#SelectSlotNumber").val();
            console.log(defaultSlotNumber);
            $.ajax({
                url: '@Url.Action("LoadSlotsByLotName", "MonthlyRentals", new { area = "MyMonthlyRental" })',
                type: 'GET',
                data: { lotName: defaultlotName, SlotNumber: defaultSlotNumber },
                success: function (data) {
                    // 更新车位下拉选单
                    var selectSlotNumber = $('#SelectSlotNumber');
                    selectSlotNumber.empty(); // 清空现有选项

                    // 将所有车位号添加到下拉选项
                    $.each(data, function (index, item) {
                        selectSlotNumber.append($('<option>', {
                            value: item.value,
                            text: item.text
                        }));
                    });

                    // 设置默认车位为之前选中的车位
                    selectSlotNumber.val(defaultSlotNumber);
                }
            });
            
            
